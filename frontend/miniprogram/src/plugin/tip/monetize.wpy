<style lang="less" scoped>
.form {
  padding: 50rpx 30rpx;
  background: #fff;
  margin: 30rpx;
  border-radius: 10rpx;
  .list {
    display: flex;
    flex-wrap: wrap;
    .item {
      flex-basis: 191rpx;
      background: #f1f1f1;
      padding: 30rpx 0rpx;
      border-radius: 10rpx;
      box-sizing: border-box;
      text-align: center;
      margin-right: 20rpx;
      margin-top: 30rpx;
      .item-title {
        font-size: 34rpx;
        font-weight: bold;
        margin-bottom: 10rpx;
      }
      .item-des {
        font-size: 26rpx;
        color: #b2b2b2;
      }
      &.active {
        background: #fae37c;
      }
    }
  }
}
.btn-m {
  font-size: 32rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 24rpx 0rpx;
  border-radius: 50rpx;
  line-height: normal;
  display: flex;
  align-items: center;
  margin: 30rpx auto;
  margin-bottom: 50rpx;
